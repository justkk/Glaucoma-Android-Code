<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/landing"
        android:focusable="false"
        android:focusableInTouchMode="false" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/editText1"
            android:layout_marginTop="23dp"
            android:text="Patient ID"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/editText1"
            android:background="@drawable/fortextbox"
            android:ems="10"
            android:hint="Enter ID"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#CACACA"
            android:textColorHint="#cacaca" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="#cacaca"
            android:text="Edit Details"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/buttoneyeleft"
            android:background="@drawable/fortextbox"
            android:ems="10"
            android:hint="Enter ID"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#CACACA"
            android:textColorHint="#cacaca" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="22dp"
            android:layout_toLeftOf="@+id/textView1"
            android:text="Doctor ID "
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText3"
            android:layout_alignLeft="@+id/textView3"
            android:text="Age"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/button2"
            android:background="@drawable/fortextbox"
            android:ems="10"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#CACACA" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/editText2"
            android:checked="false"
            android:text="Family History"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox1"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/textView4"
            android:text="Gender"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox1"
            android:layout_alignTop="@+id/textView5"
            android:text="Hemorrhage"
            android:textSize="17sp"
            android:typeface="sans" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:src="@drawable/humanface" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup1"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/textView3"
            android:text="Select an Eye"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Back"
            android:visibility="invisible" />

        <Button
            android:id="@+id/buttoneyeleft"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignLeft="@+id/editText3"
            android:layout_alignTop="@+id/imageView1"
            android:layout_marginTop="110dp"
            android:alpha="1.0"
            android:focusable="false" />

        <Button
            android:id="@+id/buttoneyeright"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignBaseline="@+id/buttoneyeleft"
            android:layout_alignBottom="@+id/buttoneyeleft"
            android:layout_alignRight="@+id/editText2"
            android:alpha="1.0" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_below="@+id/checkBox2"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />
        </RadioGroup>
        
    </RelativeLayout>

</ScrollView>